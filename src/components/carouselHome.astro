---
import Swiper from "swiper/bundle";
import "swiper/swiper-bundle.css";

const slides = [
  {
    src: "/porciones2.jpg",
    alt: "porciones",
    title: "Venta de porciones y raciones",
    description: "Servimos porciones de nuestras pizzas más vendidas sueltas.",
    interval: 3000,
  },
  {
    src: "/pasta_vegana.jpg",
    alt: "vegana",
    title: "Opciones veganas",
    description:
      "Tenemos una buena variedad de pastas y pizzas veganas en nuestra carta.",
    interval: 3000,
  },
  {
    src: "/burger-1.jpg",
    alt: "hamburguesa",
    title: "Hamburguesas",
    description:
      "Prueba nuestras hamburguesas con la carne de la mejor calidad.",
    interval: 3000,
  },
];
---

<div class="swiper w-full h-[500px] relative">
    <div class="swiper-wrapper">
      {slides.map((slide) => (
        <div class="swiper-slide relative">
          <img
            src={slide.src}
            alt={slide.alt}
            class="w-full h-full object-cover"
          />
          <!-- Texto centrado en columna -->
          <div class="absolute inset-0 flex flex-col items-center justify-center p-4 text-center bg-black/30">
            <h3 class="text-white text-2xl font-bold drop-shadow-lg">
              {slide.title}
            </h3>
            <p class="text-white text-lg drop-shadow-md mt-2">
              {slide.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  
    <!-- Botones de navegación -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  
    <!-- Paginación -->
    <div class="swiper-pagination"></div>
  </div>
  
<script>
  import Swiper from "swiper/bundle";

  const swiper = new Swiper(".swiper", {
    loop: true,
    autoplay: {
      delay: 3000,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>

